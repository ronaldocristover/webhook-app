{
    "name": "webhook-app",
    "version": "1.0.0",
    "description": "Webhook service with Bun, Hono, and MySQL",
    "main": "src/index.ts",
    "scripts": {
        "dev": "bun run --watch src/index.ts",
        "start": "bun run src/index.ts",
        "build": "bun build src/index.ts --outdir ./dist",
        "db:migrate": "bun run src/db/migrate.ts",
        "db:generate": "drizzle-kit generate:mysql",
        "db:push": "drizzle-kit push:mysql",
        "db:studio": "drizzle-kit studio"
    },
    "dependencies": {
        "drizzle-kit": "^0.31.6",
        "drizzle-orm": "^0.44.7",
        "hono": "^4.5.0",
        "mysql2": "^3.11.0",
        "pino": "^9.5.0",
        "pino-pretty": "^13.0.0",
        "zod": "^3.23.0"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@types/node": "^20.14.0",
        "typescript": "^5.5.0"
    }
}